{
  "compilerOptions": {
    "target": "es2018",
    "lib": ["esnext", "DOM"],
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": ["vitest/globals"],
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "skipDefaultLibCheck": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "declaration": true,
    "isolatedDeclarations": true
  }
}
